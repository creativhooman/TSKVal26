    <div id="yes-screen" class="result-screen">
        <img src="IMG_7181.jpeg" class="result-photo">
        <div class="message">Yay! See you! ðŸŒ»âœ¨</div>
    </div>

    <div id="no-screen" class="result-screen">
        <img src="IMG_7182.jpeg" class="result-photo">
        <div class="message">
            Siguro we understand, but hopefully, you could consider visiting us soon. ðŸ¥ºðŸ‘‰ðŸ‘ˆ
        </div>
        <button class="back-btn" onclick="goBack()">Change your mind?</button>
    </div>

    <script>
        const noBtn = document.getElementById('noBtn');
        const yesBtn = document.getElementById('yesBtn');
        const setup = document.getElementById('setup');
        const yesScreen = document.getElementById('yes-screen');
        const noScreen = document.getElementById('no-screen');
        const particlesContainer = document.getElementById('particles-container');

        const items = ['âœ¨', 'ðŸŒ¸', 'ðŸŒ»', 'ðŸ«§', 'âœ¨', 'ðŸ«§', 'ðŸŒ·'];
        
        function createParticle() {
            const particle = document.createElement('div');
            particle.className = 'floating-element';
            particle.innerText = items[Math.floor(Math.random() * items.length)];
            particle.style.left = Math.random() * 100 + 'vw';
            particle.style.fontSize = (Math.random() * 20 + 15) + 'px';
            const duration = (Math.random() * 3 + 4);
            particle.style.animationDuration = duration + 's';
            particlesContainer.appendChild(particle);
            setTimeout(() => { particle.remove(); }, duration * 1000);
        }

        setInterval(createParticle, 400);

        noBtn.addEventListener('mouseover', moveNoButton);
        noBtn.addEventListener('touchstart', moveNoButton); // For mobile touch

        function moveNoButton() {
            const x = Math.random() * (window.innerWidth - 100);
            const y = Math.random() * (window.innerHeight - 100);
            noBtn.style.left = x + 'px';
            noBtn.style.top = y + 'px';
        }

        yesBtn.addEventListener('click', () => {
            setup.style.display = 'none';
            yesScreen.style.display = 'block';
        });

        noBtn.addEventListener('click', () => {
            setup.style.display = 'none';
            noScreen.style.display = 'block';
        });

        function goBack() {
            noScreen.style.display = 'none';
            setup.style.display = 'block';
            noBtn.style.position = 'absolute';
            noBtn.style.left = '';
            noBtn.style.top = '';
        }
    </script>
